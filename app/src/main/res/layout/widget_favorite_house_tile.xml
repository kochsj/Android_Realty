<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorite_house_template"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <ImageView
        android:id="@+id/favorite_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/image_of_house"
        android:scaleType="centerCrop"
        android:src="@drawable/house_for_sale" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/favorite_house_street_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filler_address"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beds"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/favorite_house_beds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
